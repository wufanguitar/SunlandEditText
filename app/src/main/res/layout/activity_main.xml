<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.wufanguitar.SunlandEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawablePadding="10dp"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:clearDrawable="@drawable/img_clear_text"
        app:drawableSize="24dp"
        app:leftDrawableFocus="@drawable/img_sign_in_account_click"
        app:leftDrawableUnFocus="@drawable/img_sign_in_account_unclick" />

    <com.example.wufanguitar.SunlandEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawablePadding="10dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:clearDrawable="@drawable/img_clear_text"
        app:drawableSize="24dp"
        app:hidePwdDrawable="@drawable/ic_hide"
        app:leftDrawableFocus="@drawable/ic_pwd_focus"
        app:leftDrawableUnFocus="@drawable/ic_pwd_unfocus"
        app:showPwdDrawable="@drawable/ic_show" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/enter_picker_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="enter picker view test" />
</LinearLayout>
